<h1><%= @user.name %></h1>
<h2>Secrets of <%= @user.name %></h2>
<table>
	<thead>
		<th>Secret</th>
		<th>No. of likes</th>
		<th>Delete Secret?</th>
	</thead>
	<tbody>
		<% @secrets.each do |secret| %>
		<tr>
			<td><%= secret.content %></td>
			<td><%= secret.likes.count %> likes</td>
			<td>
				<form action="/secrets/<%= secret.id %>" method="post">
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<input name="_method" type="hidden" value="delete">
					<input type="submit" value="Delete">
				</form>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<h2>Enter new secret</h2>
<form action="/secrets" method="post">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<label for="new_secret">New Secret</label>
	<input type="text" name="new_secret" id="new_secret">
	<input type="submit" value="Create Secret">
</form>
<p></p>
<a href="/users/<%= @user.id %>/edit">Edit Profile</a>
<p></p>
<a href="/secrets">All Secrets</a>
